<html>
	<head>
		<script type="text/javascript" src="jquery-1.11.1.js"></script>
		<script type="text/javascript" src="source/DataTable/media/js/jquery.dataTables.js"></script>
		<link rel="stylesheet" type="text/css" href="source/bootstrap/dist/css/bootstrap.css" />
		<link rel="stylesheet" type="text/css" href="source/DataTable/media/css/jquery.dataTables.css" />
		<script type="text/javascript" src="source/bootstrap/dist/js/bootstrap.js"></script>
		<script>

			$(document).ready(function() {
				$('#table').DataTable({
				});
				} );	
			</script>
	</head>
	<body>
		<div class="container">
			<h1 class="pull-left glyphicons-halflings-regular" style="font-family:Cambria">Welcome To Exceleron Library</h1>
			<div class="dropdown">
				<span class="glyphicon glyphicon-cog pull-right btn btn-default dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown"></span>
				<ul class="dropdown-menu pull-right" role="menu" aria-labelledby="dropdownMenu1">
					<li role="presentation"><a class="glyphicon glyphicon-wrench" role="menuitem" tabindex="-1" href="#">ChangePassword</a></li>
					<li role="presentation"><a class="glyphicon glyphicon-off" role="menuitem" tabindex="-1" href="#">LogOut</a></li>
				</ul>
			</div>
			<table id="table" class="display" cellspacing="0" width="100%">
				<thead>
					<tr>
						<th>SI No</th>
						<th>Book Name</th>
						<th>Book Type</th>
						<th>Book Author</th>
						<th>Book Status</th>
						<th>Request</th>
						<th>Comment</th>
					</tr>
				</thead>

				<tbody>
					[% FOREACH msg IN messages %]
					<tr>
						<td>[% msg.Count %]</td>
						<td>[% msg.Name %]</td>
						<td>[% msg.Type %]</td>
						<td>[% msg.Author %]</td>
						<td>[% msg.Status %]</td>
						<td>
							<input type="button" name='txt_request' value="Make Request" class="form-control btn-primary"/>
						</td>
						<td>
							<input type="button" name='txt_review' value="Review" class="form-control btn-primary"/>
						</td>
					</tr>
					[% END %]
				</tbody>
			</table>
		</div>
		</body>
	</html>
